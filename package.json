{
  "name": "gradient-maker",
  "version": "0.1.0",
  "description": "Css/svg/canvas gradient maker that runs in the browser",
  "main": "index.js",
  "scripts": {
    "dev": "rollup -c",
    "test": "jest"
  },
  "keywords": [
    "css",
    "svg",
    "canvas",
    "gradients",
    "colors"
  ],
  "author": "Jakub Antolak <poprostuantolak@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chroma-js": "^1.3.5",
    "@types/jest": "^23.1.1",
    "chroma-js": "^1.3.7",
    "jest": "^23.1.0",
    "jsdoc": "^3.5.5",
    "rollup": "^0.60.7",
    "rollup-plugin-cleanup": "^3.0.0-beta.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-tslint": "^0.1.34",
    "rollup-plugin-typescript2": "^0.15.0",
    "ts-jest": "^22.4.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}

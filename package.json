  "version": "0.1.0",
  "description": "Css/svg/canvas gradient maker that runs in the browser",
  "browser": "dist/smartsettings.umd.js",
  "module": "dist/smartsettings.es.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/afternoon2/gradient-maker"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"

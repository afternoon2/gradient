{
  "name": "gradient-all",
  "version": "1.1.0",
  "description": "Gradient creation library running in the browser",
  "browser": "gradient.js",
  "module": "dist/gradient.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/afternoon2/gradient"
  },
  "scripts": {
    "dev": "rollup -c",
    "update": "npm update gradient-base gradient-css gradient-svg",
    "test": "jest --coverage",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "keywords": [
    "css",
    "svg",
    "gradients",
    "colors"
  ],
  "author": "Jakub Antolak <poprostuantolak@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "codecov": "^3.0.4",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "jest": "^23.4.2",
    "node-fetch": "^2.2.0",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.6",
    "rollup-plugin-cleanup": "^3.0.0-beta.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-terser": "^1.0.1",
    "semantic-release": "^15.9.5",
    "travis-deploy-once": "^5.0.2"
  },
  "dependencies": {
    "chroma-js": "^1.3.7",
    "gradient-base": "^1.0.4",
    "gradient-css": "^1.0.1",
    "gradient-svg": "^1.1.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    },
    "jest": {
      "coverageThreshold": {
        "global": {
          "branches": 50,
          "functions": 50,
          "lines": 50,
          "statements": 50
        }
      },
      "coverageDirectory": "./coverage",
      "collectCoverage": true
    }
  }
}
